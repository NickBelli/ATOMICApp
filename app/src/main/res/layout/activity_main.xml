<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="10dp"
    tools:context="com.example.fredastaire.atomic.MainActivity"
    android:weightSum="1">

    <Button
        android:id="@+id/addAssetButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="50dp"
        android:layout_weight="0.08"
        android:gravity="center"
        android:onClick="addAssetClickHandler"
        android:text="Add Assets"
        android:textSize="20dp" />

    <Button
        android:id="@+id/searchAssetButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="50dp"
        android:layout_weight="0.08"
        android:gravity="center"
        android:onClick="searchAssetClickHandler"
        android:text="Search Assets"
        android:textSize="20dp" />

    <Button
        android:id="@+id/viewAllAssets"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="50dp"
        android:layout_weight="0.08"
        android:gravity="center"
        android:onClick="viewAllClickHandler"
        android:text="View All"
        android:textSize="20dp" />
</LinearLayout>
